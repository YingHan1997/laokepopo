/* pages/my/my.wxss */
page{
  height: 100%;
}
.myhome{
  background: #E8E8E8;
  width: 100%;
  height: 100%;
}
.myitem{
  background: white;
  position: relative;
  padding: 30rpx 35rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.myitem image{
  width: 40rpx;
  height:40rpx;
  margin-right: 10rpx;
}
.right{
  position: absolute;
  right: 0;
}
.top image{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  border: 2px white solid;
  margin-bottom: 10rpx;
}
.top{
  text-align: center;
  font-size: 30rpx;
  padding: 90rpx 0;
}
.line{
  width: 100%;
  height: 2rpx;
  background: #E8E8E8;
}