  padding: 20rpx;
}
.time{
  position: absolute;
  right: 0;
}
.system image{
  width: 70rpx;
  height: 70rpx;
  margin-right: 30rpx;
  border-radius: 50%;
}
.title{
  font-size: 33rpx;
}
.mytext{
width: 90%;
}
.content{
  color: #ccc;
