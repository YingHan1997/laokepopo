/* pages/topic/addcomment/addcomment.wxss */
page{
  width: 100%;
  height: 100%;
  background: #eee;
}
.add{
  min-height: 200rpx;
  background: white;
  font-size: 28rpx;
  padding: 10rpx;
}
.pic image{
  height:200rpx;
  width: 200rpx;
  margin:10rpx;
}
.pic{
  padding: 20rpx;
  background: white;
}
.send image{
  width: 140rpx;
  height: 140rpx;
}
.send{
  width: 100%;
  text-align: center;
  margin-top: 50rpx;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.3;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  font-size: 30rpx;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 10rpx;
}
.btn-cancel {
  text-align: center;
  padding: 15rpx 0;
  border-bottom: solid 2rpx #eee;
}
.btn-confirm {
  text-align: center;
  padding: 15rpx 0;
}
.title{
  display: none;
}